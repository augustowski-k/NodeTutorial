<% include partials/header %>

<h1>Login</h1>

<form
  <% if(typeof url !== 'undefined') { %>
    action="/login?url=<%= url %>"
  <% }else {%>
    action="/login"
  <% } %>
  method="POST">

  <input type="email" name="email" placeholder="Email address">
  <input type="password" name="password" placeholder="password">
  <button>Login</button>
</form>

