<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1>Create new camp</h1>
    <form action="/campgrounds/<%= _id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= name %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="campground[price]" placeholder="price" value="<%= price %>" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="campground[imgUrl]" placeholder="image url" value="<%= imgUrl %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= description %>">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" name="button">Submit</button>
      </div>
    </form>
    <a href="/campgrounds/<%= _id %>">go back</a>
  </div>
</div>

<% include ../partials/footer %>
