<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1>Edit a comment</h1>
    <form action="/campgrounds/<%= campId %>/comments/<%= comment._id %>?_method=PUT" method="post">
      <div class="form-group">
        <textarea class="form-control" name="comment[content]" placeholder="content"><%= comment.content %></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" name="button">Submit</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campId %>">go back</a>
  </div>
</div>

<% include ../partials/footer %>
