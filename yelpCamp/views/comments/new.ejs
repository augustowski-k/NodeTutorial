<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1>Add a comment for <%= camp.name %></h1>
    <form action="/campgrounds/<%= camp._id %>/comments" method="post">
      <div class="form-group">
        <textarea class="form-control" name="comment[content]" placeholder="content"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" name="button">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">go back</a>
  </div>
</div>

