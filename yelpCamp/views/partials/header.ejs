<!DOCTYPE html>
<html>
  <head>
    <title>Yelp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">YelpCamp</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if (!currentUser) { %>
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Sign up</a></li>
            <% } else { %>
              <li><span class="navbar-text">Logged in as <strong><%= currentUser.email %></strong></span></li>
              <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="alert alert-success" role="alert" <%= flashSuccess && flashSuccess.length > 0 ? '' : 'hidden'; %>><%= flashSuccess %></div>
    <div class="alert alert-info" role="alert" <%= flashInfo && flashInfo.length > 0 ? '' : 'hidden'; %>><%= flashInfo %></div>
    <div class="alert alert-warning" role="alert" <%= flashWarning && flashWarning.length > 0 ? '' : 'hidden'; %>><%= flashWarning %></div>
    <div class="alert alert-danger" role="alert" <%= flashError && flashError.length > 0 ? '' : 'hidden'; %>><%= flashError %></div>
